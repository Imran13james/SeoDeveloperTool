<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Details</title>
    <style>
        body {
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
            overflow: scroll;
        }

        h2 {
            width: 100%;
            text-align: center;
            padding-top: 1rem !important;
            text-transform: capitalize;
            font-size: 2rem;
            letter-spacing: 0.1rem;
            /* background-color: red; */
        }

        input {
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            border: 2px solid black;
            border-radius: 20px;
            margin-top: 1rem;
            padding: 0.7rem 3rem 0.7rem 1rem;
            width: 300px;
            outline: none;
            transition: 0.3s ease-in-out;
        }

        input[type="search"]::placeholder {
            font-size: 0.9rem;
        }

        input:focus {
            border-color: rgba(0, 0, 0, 0.339);
        }



        .zigzag {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            overflow: hidden;
            white-space: nowrap;
        }


        .zigzag th,
        .zigzag td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }


        .table-row:nth-child(even) {
            background-color: #f9f9f9;
        }


        @media (width < 900px) {
            .zigzag {
                display: block;
                width: 100%;
                overflow-x: auto;
                background-color: #F1F1F1;
                margin-top: 5rem;
            }

            .zigzag thead,
            .zigzag tbody,
            .zigzag th,
            .zigzag td,
            .zigzag tr {
                display: block;
            }

            .zigzag thead tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }

            .zigzag tr {
                margin-bottom: 15px;
            }

            .zigzag td {
                border: none;
                border-bottom: 1px solid #ddd;
                position: relative;
                padding-left: 40%;
                text-overflow: ellipsis;
                overflow: hidden;
                white-space: nowrap;
            }

            .zigzag td:before {
                position: absolute;
                left: 6px;
                padding-right: 10px;
                white-space: nowrap;
                content: attr(data-label);
                font-weight: bold;

            }

        }
    </style>
</head>

<body>
    <a href="/admin/" style="text-align: center; text-decoration: none; position: relative;
  left: 47%;" role="button">Go tO Home</a>
    <h2>PayMent Details</h2>
    <input type="search" placeholder="Search User" id="userSearch" oninput="searchUsers()">
    <h1 style="text-align: center; margin-top: 2rem;"></h1>
    <table class="zigzag" id="userTable">
        <thead>
            <br>
            <tr>
                <th class="header">Name</th>
                <th class="header">Email</th>
                <th class="header">Phone</th>
                <th class="header">Payment</th>
                <th class="header">Description</th>
                <th class="header">Account Buy Check</th>
                <th class="header">Earning Money Check</th>
                <th class="header">Image</th>
            </tr>
        </thead>
        <tbody>
            <% accounts.forEach(account=> { %>
                <tr class="table-row">
                    <td class="col col-2"><%- account.name || '' %></td>
                    <td class="col col-3"><%- account.email || '' %></td>
                    <td class="col col-4"><%- account.phone || '' %></td>
                    <td class="col col-5"><%- account.paymentMethod || '' %></td>
                    <td class="col col-6"><%- account.description || '' %></td>
                    <td class="col col-7"><%- account.accountBuyCheck || '' %></td>
                    <td class="col col-8"><%- account.earningMoneyCheck || '' %></td>
                    <td class="col col-9">
                        <% if (account.image) { %>
                            <img src="/Account/image/<%- account.image %>" alt="Account Image" class="account-image">
                            <% } else { %>
                                <img src="/uploads/placeholder.jpg" alt="Placeholder Image" class="account-image">
                                <% } %>
                    </td>
                    <% }); %>
        </tbody>
    </table>
</body>
<style>
    img.account-image {
        width: 250px;
        /* Set desired width */
        height: 250px;
        /* Set desired height */
        border-radius: 50%;
        /* Make the image circular */
        object-fit: cover;
        /* Maintain aspect ratio */
    }
</style>
<script>
    function searchUsers() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("userSearch");
        filter = input.value.toUpperCase();
        table = document.getElementById("userTable");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            // Assuming the user's first name is in the first cell, last name in the second, and email in the third
            tdFirstName = tr[i].getElementsByTagName("td")[0];
            tdLastName = tr[i].getElementsByTagName("td")[1];
            tdEmail = tr[i].getElementsByTagName("td")[9]; // Assuming email is in the 10th cell

            if (tdFirstName || tdLastName || tdEmail) {
                txtValueFirstName = tdFirstName.textContent || tdFirstName.innerText;
                txtValueLastName = tdLastName.textContent || tdLastName.innerText;
                txtValueEmail = tdEmail.textContent || tdEmail.innerText;

                // Check if the input matches any part of first name, last name, or email
                if (
                    txtValueFirstName.toUpperCase().indexOf(filter) > -1 ||
                    txtValueLastName.toUpperCase().indexOf(filter) > -1 ||
                    txtValueEmail.toUpperCase().indexOf(filter) > -1
                ) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>
<script>
    // Count the total number of rows in the table
    let totalAccounts = document.querySelectorAll('.zigzag').length;

    // Update the content of the h1 element with the total count
    document.querySelector('h1').innerText = 'Total Users from Submit : ' + totalAccounts;
</script>

</html>