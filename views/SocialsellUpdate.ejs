<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Buy_Sell Record</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    h1 {
      text-align: center;
      font-size: 2rem;
      text-transform: capitalize;
      /* margin-top: 5rem; */
      color: black;
      letter-spacing: 0.2rem;
      font-weight: 600;
    }

    form {
      display: flex;
      flex-direction: column;
      width: clamp(300px, 100%, 350px);
      margin: 10px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      line-height: 2rem;
      outline: none;
      transition: 0.3s ease-in-out;
      cursor: pointer;
    }

    form:hover {
      box-shadow: rgba(238, 233, 233, 0.19) 0px 10px, rgba(219, 212, 212, 0.498) 0px 6px 6px;
    }

    form select {
      padding: 0.5rem 1rem;
      border-radius: 0.2rem;
      cursor: pointer;
      font-size: 0.8rem;
      font-weight: 700;
    }

    textarea,
    select:hover {
      border-color: black;
    }

    label {
      display: block;
      font-size: 1rem;
      text-transform: capitalize;
      font-weight: 600;
      margin-bottom: 5px;
      color: black;
    }

    select,
    textarea {
      border: 2px solid rgba(0, 0, 0, 0.324);
      transition: 0.3s ease-in-out;
    }

    textarea {
      height: 8rem;
      width: 100%;
      resize: none;
    }

    input[type="text"] {
      width: 100%;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }

    button[type="submit"] {
      margin-top: 10px;
      padding: 10px;
      border: none;
      cursor: pointer;
      background-color: #007bff;
      color: #fff;
      transition: 0.3s ease-in-out;
      border-radius: 5px;
      font-size: 1rem;
      font-weight: 700;
    }


    input[type="text"]:focus {
      outline: none;
      border: 2px solid #007bff;
    }

    button[type="submit"]:hover {
      background-color: #0069d9;
    }
  </style>
</head>

<body>
  <h1>Update Scail Acc</h1>
  <form id="updateForm" method="PUT">
    <label for="serialNo">Serial No:</label>
    <input type="number" name="serialNo" id="serialNo" placeholder="Enter Serial No" required>
    <label for="earningPlatforms">Earning Platforms:</label>
    <select name="earningPlatforms" id="earningPlatforms" required>
      <option value="YouTube">YouTube</option>
      <option value="Facebook">Facebook</option>
      <option value="Instagram">Instagram</option>
      <option value="Twitter">Twitter</option>
      <option value="TikTok">TikTok</option>
      <option value="Website">Website</option>
      <option value="Snapchat">Snapchat</option>
      <option value="OtherAccounts">OtherAccounts</option>
      <option value="Telegram">Telegram</option>
      <option value="LINKEDIN">LINKEDIN</option>
    </select>
    <label for="title">Title:</label>
    <input type="text" name="aboutThisAccount[title]" id="title" placeholder="Enter Title" required>

    <label for="accPrice">Account Price:</label>
    <input type="number" name="aboutThisAccount[accPrice]" id="accPrice" placeholder="Enter Account Price" required>

    <label for="accName">Account Name:</label>
    <input type="text" name="aboutThisAccount[accName]" id="accName" placeholder="Enter Account Name" required>

    <label for="accountDescription">Account Description:</label>
    <textarea name="aboutThisAccount[accountDescription]" id="accountDescription" rows="3"
      placeholder="Enter Account Description"></textarea>

    <label for="accountUrl">Account URL:</label>
    <input type="url" name="aboutThisAccount[accountUrl]" id="accountUrl" placeholder="Enter Account URL" required>

    <label for="accountAge">Account Age:</label>
    <input type="text" name="aboutThisAccount[accountAge]" id="accountAge" placeholder="Enter Account Age">

    <button type="submit">Update Social/Account Record</button>
  </form>

</body>

</html>

<script>
  document.getElementById('updateForm').addEventListener('submit', function (event) {
    event.preventDefault();

    const serialNo = document.getElementById('serialNo').value;
    const earningPlatforms = document.getElementById('earningPlatforms').value;
    const title = document.getElementById('title').value;
    const accPrice = document.getElementById('accPrice').value;
    const accName = document.getElementById('accName').value;
    const accountDescription = document.getElementById('accountDescription').value;
    const accountUrl = document.getElementById('accountUrl').value;
    const accountAge = document.getElementById('accountAge').value;

    const data = {
      serialNo: serialNo,
      earningPlatforms: earningPlatforms,
      aboutThisAccount: {
        title: title,
        accPrice: accPrice,
        accName: accName,
        accountDescription: accountDescription,
        accountUrl: accountUrl,
        accountAge: accountAge,
      }
    };

    fetch(`/socialsell/update-social-sells/${serialNo}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.json();
      })
      .then(data => {

        alert('Buy/Sell record updated successfully');
      })
      .catch((error) => {
        console.error('Error:', error);
        alert('Error updating Buy/Sell record');
      });
  });
</script>