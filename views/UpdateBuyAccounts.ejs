<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create New Details</title>
</head>
<body>
  <h1>Update Details</h1>
  <form id="updateDetailsForm">
    <label for="accountFullname">Id :</label>
    <input type="text" id="accountId" name="id" required placeholder="Enter your account fullname e.g., Imran Ali">
    
    <label for="accountFullname">Account Fullname::</label>
    <input type="text" id="accountFullname" name="accountFullname" required placeholder="Here enter the Id you want to update data">
 
    <label for="DescFull">Description:</label>
    <input type="text" id="DescFull" name="DescFull" required placeholder="Provide a brief description of the account">
    
    <label for="siteAge">Site Age:</label>
    <input type="text" id="siteAge" name="siteAge" required placeholder="Enter the site age in years">
    
    <label for="monthlyProfit">Monthly Profit:</label>
    <input type="number" id="monthlyProfit" name="monthlyProfit" required placeholder="Enter the monthly profit numbers">
    
    <label for="profitMargin">Profit Margin:</label>
    <input type="number" id="profitMargin" name="profitMargin" required placeholder="Enter the profit margin in percentage">
    
    <label for="pageViews">Page Views:</label>
    <input type="number" id="pageViews" name="pageViews" required placeholder="Enter the average monthly page views">
    
    <label for="profitMultiple">Profit Multiple:</label>
    <input type="text" id="profitMultiple" name="profitMultiple" required placeholder="Enter the profit multiple (e.g., 3x)">
    
    <label for="performanceOverviewimg">Performance Overview Image:</label>
    <input type="file" id="performanceOverviewimg" name="performanceOverviewimg" accept="image/*" placeholder="Upload a performance overview image">
    
    <label for="revenueMultiple">Revenue Multiple:</label>
    <input type="text" id="revenueMultiple" name="revenueMultiple" required placeholder="Enter the revenue multiple (e.g., 5x)">
    
    <label for="performanceOverviewDetails">Performance Overview Details:</label>
    <input type="text" id="performanceOverviewDetails" name="performanceOverviewDetails" placeholder="Provide details about the performance overview">
    
    <label for="moreDetailsimg">More Details Image:</label>
    <input type="file" id="moreDetailsimg" name="moreDetailsimg" accept="image/*" placeholder="Upload a more details image">
    
    <label for="moreDetailsDetails">More Details:</label>
    <input type="text" id="moreDetailsDetails" name="moreDetailsDetails" placeholder="Provide more details about the account">
    
    <label for="monthlyrevenueimg">Monthly Revenue Image:</label>
    <input type="file" id="monthlyrevenueimg" name="monthlyrevenueimg" accept="image/*" placeholder="Upload a monthly revenue image">
    
    <label for="monthlyrevenueDetails">Monthly Revenue Details:</label>
    <input type="text" id="monthlyrevenueDetails" name="monthlyrevenueDetails" placeholder="Provide details about the monthly revenue">
    
    <label for="accountAnalyticsimg">Account Analytics Image:</label>
    <input type="file" id="accountAnalyticsimg" name="accountAnalyticsimg" accept="image/*" placeholder="Upload an account analytics image">
    
    <label for="accountAnalyticsDetails">Account Analytics Details:</label>
    <input type="text" id="accountAnalyticsDetails" name="accountAnalyticsDetails" placeholder="Provide details about the account analytics">
    
    <label for="googleAnalyticsimg">Google Analytics Image:</label>
    <input type="file" id="googleAnalyticsimg" name="googleAnalyticsimg" accept="image/*" placeholder="Upload a Google Analytics image">
    
    <label for="googleAnalyticsDetails">Google Analytics Details:</label>
    <input type="text" id="googleAnalyticsDetails" name="googleAnalyticsDetails" placeholder="Provide details about Google Analytics">
    
    



    <button type="submit">Submit</button>
  </form>
</form>
</body>
<style>
  body{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
    h1{
    text-align: center;
    font-size: 2rem;
    text-transform: capitalize;
    /* margin-top: 5rem; */
    color: black;
    letter-spacing: 0.2rem;
    font-weight: 600;
  }
  form {
  display: flex;
  flex-direction: column;
  width: clamp(300px , 100% , 400px);
  margin: 7rem auto;
  padding: 20px;  
  border: 1px solid #ccc;
  border-radius: 5px;
  line-height: 2.5rem;
  outline: none;
  transition: 0.3s ease-in-out;
  cursor: pointer;
}
form:hover {
  box-shadow: rgba(238, 233, 233, 0.19) 0px 10px ,  rgba(219, 212, 212, 0.498) 0px 6px 6px;
}
form select{
  padding: 0.5rem 1rem;
  border-radius: 0.2rem;
  cursor: pointer;
  font-size: 0.8rem;
  font-weight: 700;
}
textarea , select:hover{
  border-color: black;
}

label {
  display: block;
  font-size: 1rem;
  text-transform: capitalize;
  font-weight: 600;
  margin-bottom: 5px;
  color: black;
}
select , textarea{
  border: 2px solid rgba(0, 0, 0, 0.324);
  transition: 0.3s ease-in-out;
}
textarea{
  height: 8rem;
  width: 100%;
  resize: none;
}

input[type="text"] {
  width: 100%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

button[type="submit"] {
  margin-top: 10px;
  padding: 10px;
  border: none;
  cursor: pointer;
  background-color: #007bff;
  color: #fff;
  transition: 0.3s ease-in-out;
  border-radius: 5px;
  font-size: 1rem;
  font-weight: 700;
}


input[type="text"]:focus {
  outline: none;
  border: 2px solid #007bff ;
}

button[type="submit"]:hover {
  background-color: #0069d9;
}
</style>
<script>
  const updateDetailsForm = document.getElementById('updateDetailsForm');

updateDetailsForm.addEventListener('submit', (event) => {
  event.preventDefault(); // Prevent default form submission behavior

  const id = document.getElementById('accountId').value; // Get the ID from the input field
  console.log(id)
  const updateFields = {
    performanceOverviewimg: document.getElementById('performanceOverviewimg').value,
    accountFullname: document.getElementById('accountFullname').value,
    DescFull: document.getElementById('DescFull').value,
    siteAge: document.getElementById('siteAge').value,
    monthlyProfit: document.getElementById('monthlyProfit').value,
    pageViews: document.getElementById('pageViews').value,
    profitMultiple: document.getElementById('profitMultiple').value,
    revenueMultiple: document.getElementById('revenueMultiple').value,
    performanceOverviewDetails: document.getElementById('performanceOverviewDetails').value,
    moreDetailsimg: document.getElementById('moreDetailsimg').value,
    moreDetailsDetails: document.getElementById('moreDetailsDetails').value,
    monthlyrevenueimg: document.getElementById('monthlyrevenueimg').value,
    profitMargin: document.getElementById('profitMargin').value,
    monthlyrevenueDetails: document.getElementById('monthlyrevenueDetails').value,
    accountAnalyticsimg: document.getElementById('accountAnalyticsimg').value,
    accountAnalyticsDetails: document.getElementById('accountAnalyticsDetails').value,
    googleAnalyticsDetails: document.getElementById('googleAnalyticsDetails').value,
    googleAnalyticsimg: document.getElementById('googleAnalyticsimg').value,
  };

  fetch(`http://localhost:4000/BuyAccounts/update_buyaccounts/${id}`, {
    method: 'PUT',
    body: JSON.stringify(updateFields), // Convert update fields to JSON format
    headers: {
      'Content-Type': 'application/json',
    },
  })
  .then((response) => {
    if (response.ok) {
      alert('Account details updated successfully!');
    } else {
      response.json().then((data) => {
        alert(`Error: ${data.message}`);
      });
    }
  });
});

</script>
</html>
