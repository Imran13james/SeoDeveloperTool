<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Buy_Sell Record</title>
</head>
<style>
  body{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
    h1{
    text-align: center;
    font-size: 2rem;
    text-transform: capitalize;
    /* margin-top: 5rem; */
    color: black;
    letter-spacing: 0.2rem;
    font-weight: 600;
  }
  form {
  display: flex;
  flex-direction: column;
  width: 280px;
  margin: 10px auto;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  line-height: 2rem;
  outline: none;
  transition: 0.3s ease-in-out;
  cursor: pointer;
}
form:hover {
  box-shadow: rgba(238, 233, 233, 0.19) 0px 10px ,  rgba(219, 212, 212, 0.498) 0px 6px 6px;
}
form select{
  padding: 0.5rem 1rem;
  border-radius: 0.2rem;
  cursor: pointer;
  font-size: 0.8rem;
  font-weight: 700;
}
textarea , select:hover{
  border-color: black;
}

label {
  display: block;
  font-size: 1rem;
  text-transform: capitalize;
  font-weight: 600;
  margin-bottom: 5px;
  color: black;
}
select , textarea{
  border: 2px solid rgba(0, 0, 0, 0.324);
  transition: 0.3s ease-in-out;
}
textarea{
  height: 8rem;
  width: 100%;
  resize: none;
}

input[type="text"] {
  width: 100%;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

button[type="submit"] {
  margin-top: 10px;
  padding: 10px;
  border: none;
  cursor: pointer;
  background-color: #007bff;
  color: #fff;
  transition: 0.3s ease-in-out;
  border-radius: 5px;
  font-size: 1rem;
  font-weight: 700;
}


input[type="text"]:focus {
  outline: none;
  border: 2px solid #007bff ;
}

button[type="submit"]:hover {
  background-color: #0069d9;
}
</style>
<body>
    <h1>Delete Buy Record</h1>

    <form id="deleteForm" action="/buyandsell/delete-buy-sells/:customerId" method="DELETE">
        <label for="customerId">Customer ID:</label>
        <input type="number" name="customerId" id="customerId" placeholder="Enter customer ID" required>

        <button type="submit">Delete Buy_Sell Record</button>
    </form>
</body>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('deleteForm');

    form.addEventListener('submit', function(e) {
        e.preventDefault(); // Prevent default form submission

        const customerId = document.getElementById('customerId').value;
        // Perform any client-side validation here before sending the request

        // Send fetch request to delete the data
        fetch(`/buyandsell/delete-buy-sells/${customerId}`, {
            method: 'DELETE',
        })
        .then(response => response.json()) // Parse the JSON response
        .then(data => {
            // Handle successful delete response
            console.log(data); // Log the response or perform any other action
        })
        .catch(error => {
            // Handle error response
            console.error(error); // Log the error or perform error handling
        });
    });
});
</script>
</html>
